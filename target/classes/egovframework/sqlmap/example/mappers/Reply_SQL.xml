	<insert id="insertReply" parameterType="replyVO">
		<selectKey keyProperty="replyNo" resultType="int" order="BEFORE">
			select
				seq_reply.nextval
			from dual
		</selectKey>
			insert into reply (
				replyNo, memBoardNo, replyWriter, replyContent, replyRegDate
			) values (
				#{replyNo}, #{memBoardNo}, #{replyWriter}, #{replyContent}, TO_CHAR(sysdate, 'YYYY-MM-DD')
			)
	</insert>
	
