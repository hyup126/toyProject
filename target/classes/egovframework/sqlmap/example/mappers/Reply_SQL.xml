	<update id="updateReply" parameterType="replyVO">
		update reply
			set
				replyContent = #{replyContent}
		where replyNo = #{replyNo} and memBoardNo = #{memBoardNo}
	</update>


	<update id="deleteReply" parameterType="int">
		delete from reply
		where replyNo = #{replyNo}
	</update>
	
	<select id="selectCountReply" parameterType="replyVO" resultType="int">
		select count(*) replyCnt
		from reply
		where memBoardNo = #{memBoardNo}
	</select>

